
<!DOCTYPE html>
<html>
<head>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="/socket.io/socket.io.js"></script>
<script   src="https://code.jquery.com/jquery-3.1.1.min.js"   integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="   crossorigin="anonymous"></script>
 <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>
<body style="background-color: gray;">
<div class="container" style="width: 400px;">
 <br>
 <div class="jumbotron">
 <h1 class="display-4">Messages</h1>
 <br>
 <input id = "name" class="form-control" placeholder="Name">
 <br>
 <textarea id = "message" class="form-control" placeholder="Your Message Here">
</textarea>
 <br>
 <button id="send" class="btn btn-success">Send</button>
 </div>
 <div id="messages" style="text-align: center; color:orange;" >
</div>
</div>
<script>
var socket = io();
socket.on('message', addMessages) 

$(() => {
    $("#send").click(()=>{
       sendMessage({
          name: $("#name").val(), 
          message:$("#message").val()});
        })
      getMessages()
    })
    
function addMessages(message){
   $("#messages").append(`
      <h4> ${message.name} </h4>
      <p>  ${message.message} </p>`)
      
      if (message.message == 'oi' && message.name == 'Dancairo'){
         sendMessage({
            name: 'Kenneth',
            message: 'Olá tudo bem?'
          })
      }
      if (message.message == 'estou bem e voce?' && message.name == 'Dancairo'){
         sendMessage({
            name: 'Kenneth',
            message: 'eu também estou'
          })
      }
      if (message.message == 'Podemos marcar nossa reunião?' && message.name == 'Dancairo'){
         sendMessage({
            name: 'Kenneth',
            message: 'Sim, pode ser hoje as 17 horas?'
          })
      }

      if (message.message == 'Pode sim, perfeito' && message.name == 'Dancairo'){
         sendMessage({
            name: 'Kenneth',
            message: 'Combinado !'
          })
      }
   }
function getMessages(){
  $.get('http://3.80.40.175:3000/messages', (data) => {
   data.forEach(addMessages);
   })
 }
function sendMessage(message){
   $.post('http://3.80.40.175:3000/messages', message)
 }
</script>
</body>
</html>
